<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>filter.AdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CustomerFilter</filter-name>
        <filter-class>filter.CustomerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>GuestFilter</filter-name>
        <filter-class>filter.GuestFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/adminController</url-pattern>
        <url-pattern>/productController</url-pattern>
        <url-pattern>/managerCategoryController</url-pattern>
        <url-pattern>/managerProduct.jsp</url-pattern>
        <url-pattern>/managerCategory.jsp</url-pattern>
        <url-pattern>/insertproduct.jsp</url-pattern>
        <url-pattern>/editProduct.jsp</url-pattern>
        <url-pattern>/trashCategory.jsp</url-pattern>
    </filter-mapping>
    
    <filter-mapping>
        <filter-name>CustomerFilter</filter-name>
        <url-pattern>/cartController</url-pattern>
        <url-pattern>/addToCartController</url-pattern>
        <url-pattern>/removeFromCartController</url-pattern>
        </filter-mapping>

    <filter-mapping>
        <filter-name>GuestFilter</filter-name>
        <url-pattern>/login.jsp</url-pattern>
        <url-pattern>/register.jsp</url-pattern>
        <url-pattern>/userController</url-pattern> 
        </filter-mapping>
    
</web-app>